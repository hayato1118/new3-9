<div class="container">
  <p id="notice"></p>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h2>Editing Book</h2>
      <%= form_for (@book) do |f| %>
      <div class="field row">
        <p>
          <label>Category</label>
        </p>
        <%= f.select :category, [["小説","小説"],["漫画","漫画"],["自伝","自伝"],
           ["雑誌","雑誌"], ["サスペンス","サスペンス"],],class: "col-sm-12"%>
      </div>
      <div class="field row">
        <label>Title</label>
        <%= f.text_field :title, class: " col-sm-12"%>
      </div>
      <div class="field row">
        <label>Opinion</label>
        <%= f.text_area :opinion, class: " col-sm-12" %>
      </div>
      <div class="field row">
        <%= button_tag :type => "submit", :class =>"btn btn-primary col-xs-12" do %>Update Book 
        <% end %>
      </div>
      <%=link_to "Show", book_path(@book.id) %>| 
      <%=link_to "Back", books_path%>
      <% end %>
    </div>
  </div>
</div>
