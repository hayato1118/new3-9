<head>

<!--カレンダーjsで必要なもの-->
<!--<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1/jquery-ui.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1/i18n/jquery.ui.datepicker-ja.min.js"></script>
<link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1/themes/ui-lightness/jquery-ui.css" >
-->
</head>
<!--ユーザー一覧-->
  <div class="container">
    <p id="notice"></p>
    <div class="row">
      <!--ここから部分共通部分-->
      <div class="col-lg-3">
        <div class="container col-lg-12">
          <h2>User info</h2>
          <%= attachment_image_tag @bookc.user, :profile_image, :fill, 100, 100, class: "profile-thumb", fallback: "no_image.jpg" , class: "img-circle"%>
            <table class="table">
              <tbody>
                <tr></tr>
                <tr>
                  <th>name</th>
                  <th>
                    <%= @bookc.user.name %>
                  </th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th>
                    <%= @bookc.user.introduction %>
                  </th>
                </tr>
              </tbody>
          </table>
            <div class="field row">
              <%= link_to edit_user_path(current_user) do %> <i class="btn btn-default  glyphicon glyphicon-wrench col-lg-12"></i>
                <% end %>
            </div>


            <!--New book投稿フォーム-->
            <h2>New book</h2>
            <%= form_for(@book) do |f| %>
              <% if @book.errors.any? %>
                <div id="error_explanation" class="alert alert-danger">
                  <ul>
                    <% @book.errors.full_messages.each do |message| %>
                      <li>
                        <%= message %>
                      </li>
                      <% end %>
                  </ul>
                </div>
                <% end %>
                  <div class="field row"> <label>BOOK COVER</label>
                    <%= f.attachment_field :image %>
                  </div>
                  <div class="field row"> <label>投稿日</label>
                 <%= f.text_field :date, id: "datepicker" ,class: "col-lg-12" %>
                  </div>
                  <div class="field row"> <label>Price</label>
                    <%= f.number_field :price, class: "col-lg-12"%>
                  </div>
                  <div class="field row"> <label>Category</label>
                    <%= f.select :category, [["小説","小説"],["漫画","漫画"],["自伝","自伝"],
      ["雑誌","雑誌"], ["サスペンス","サスペンス"],],class: "col-lg-12"%>
                  </div>
                  <div class="field row"> <label>Title</label>
                    <%= f.text_field :title, class: " col-lg-12"%>
                  </div>
                  <div class="field row"> <label>Opinion</label>
                    <%= f.text_area :opinion, class: " col-lg-12" %>
                  </div>
                  <div class="actions row">
                    <%= f.submit "Create Book", class:"btn btn btn-primary col-lg-12" %>
                  </div>
                  <% end %>
        </div>
      </div>
      <!--ここまで部分共通部分-->
      <!--ユーザー一覧-->
      <div class="col-lg-9">
        <div class="container  col-lg-12">
          <h2>Book detail</h2>
          <table class="table">
            <thead>
              <tr>
                <th>Profile imaga</th>
                <th>Book Cover</th>
                <th>Date</th>
                <th>Price</th>
                <th>Category</th>
                <th>Title</th>
                <th>Opinion</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <%= link_to @bookc.user do %>
                    <%= attachment_image_tag @bookc.user, :profile_image, :fill, 100, 100,  fallback: "default.jpg" %><br>
                      <%= @bookc.user.name %>
                        <% end %>
                </td>
                <td>
                  <%= attachment_image_tag @bookc, :image, :fill, 100, 100,  fallback: "no_image.jpg"%>
                </td>
                <td>
                  <%= @bookc.date %>
                </td>
                <td>¥
                  <%= @bookc.price %>
                </td>
                <td>
                  <%= @bookc.category %>
                </td>
                <td>
                  <%= link_to @bookc.title %>
                </td>
                <td>
                  <%= @bookc.opinion %>
                </td>
                <td>
                  <% if @bookc.user == current_user %>
                    <%=link_to "Edit", edit_book_path(@bookc.id), class: "btn-sm btn-success" %>
                      <% end %>
                </td>
                <td>
                  <% if @bookc.user == current_user %>
                    <%= link_to "Destroy", book_path(@bookc), method: :delete, class: "btn-sm btn-danger", data: { confirm: '本当に消しますか?'} %>
                      <% end %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        <!--コメント機能-->
        <div class="comment-list bt style-2" id="comments">
          <div class="float-wrapper">
            <h2 class="comment-count">
              <%= @bookc.post_comments.count %>件コメント</h2>
          </div>
          <ol>
            <% @post_comments.each do |post_comment| %>
              <div class="balloon1">
                <div class="icon">
                  <%= attachment_image_tag post_comment.user,:profile_image, :fill, 100, 100, fallback: "no_image.jpg" , class: "img-circle" %>
                </div>
                <table>
                  <tbody>
                    <tr>
                      <td class="text-right">名前：</td>
                      <td>
                        <%= post_comment.user.name %>
                      </td>
                    </tr>
                    <tr>
                      <td class="text-right">投稿日：</td>
                      <td>
                        <%= @bookc.created_at.strftime('%Y/%m/%d') %>
                      </td>
                    </tr>
                    <tr>
                      <td class="text-right">コメント：</td>
                      <td>
                        <%= post_comment.comment %>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
              <p>
                <% end %>
                  <!--ページング機能-->
                  <div class="text-center">
                    <%= paginate @post_comments, class: "pagenate" %>
                  </div>
                  <hr>
                  <div class="section-title-wrapper style-1 v1 mt-30" id="divAddComment">
                    <h3 class="section-title left"> <span>コメント</span> </h3>
                  </div>
                  <!--コメント送信部分-->
                  <%= form_for [@bookc, @post_comment] do |f| %>
                    <!--エラーメッセージ表示機能-->
                    <% if flash[:error].present? %>
                      <ul class="errors">
                        <% flash[:error].each do |e| %>
                          <li>
                            <%= e %>
                          </li>
                          <% end %>
                      </ul>
                      <% end %>
                        <div class="row">
                          <div class="col-sm-12">
                            <%= f.text_field :comment, class: "form-control",placeholder: "コメントをここに" %>
                          </div>
                        </div>
                        <%= f.submit "送信する", class: "btn btn-primary pull-right" %>
                          <% end %>
                            <!--コメント機能-->
        
        </div>
      </div>
    </div>
  </div>
