<!--ユーザー一覧-->
<div class="container">
  <p id="notice"></p>
  <div class="row">
    <!--共通項ここから-->
    <!--ユーザ画面-->
    <%= render 'books/list' %>
      <!--共通項ここまで-->
      <!--ユーザー一覧-->
      <div class="col-sm-9">
        <div class="container  col-sm-12">
          <h2>Books</h2>
          <table class="table table-hover">
            <thead>
              <tr>
                <th></th>
                <th>Book Cover</th>
                <th>Date</th>
                <th>Price</th>
                <th>Category</th>
                <th>Title</th>
                <th>Opinion</th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td>
                    <%= link_to user_infomation_path(book.user) do %>
                      <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50,  fallback: "default.jpg"%>
                        <% end %>
                  </td>
                  <td>
                    <%= attachment_image_tag book, :image, :fill, 50, 50,  fallback: "default.jpg"%>
                  </td>
                  <td>
                    <%=book.date %>
                  </td>
                  <td>¥
                    <%=book.price %>
                  </td>
                  <td>
                    <%=book.category %>
                  </td>
                  <td>
                    <%=link_to book.title ,book_path(book.id)%>
                  </td>
                  <td>
                    <%=book.opinion %>
                  </td>
                </tr>
                <% end %>
            </tbody>
          </table>
          <div class="text-center">
            <%= paginate @books, class: "pagenate" %>
          </div>
        </div>
      </div>
  </div>
</div>