<!--ユーザー一覧-->
<div class="container">
  <p id="notice"></p>
  <div class="row">
    <!--共通項ここから-->
    <!--ユーザ画面-->
    <%= render 'books/list' %>
      <!--共通項ここまで-->
      <!--ユーザー一覧-->
      <div class="col-sm-9">
        <div class="container  col-sm-12">
          <h2>Users</h2>
          <% @users.each do |user| %>
            <div class="users-box row col-sm-4">
              <table class="table-bordered">
                <tbody>
                  <tr>
                    <td colspan="2" rowspan="2">
                      <%= link_to user_infomation_path(user) do %>
                        <%= attachment_image_tag user, :profile_image, :fill, 100, 100,  fallback: "no_image.jpg",class: "img-circle img-thumbnail" %>
                    </td>
                    <% end %>
                      <td colspan="2">名前</td>
                  </tr>
                  <tr>
                    <td colspan="2">
                      <%= user.name %>
                    </td>
                  </tr>
                  <tr>
                    <td colspan="3" rowspan="2"></td>
                    <td>詳細</td>
                  </tr>
                  <tr>
                    <td>
                      <%=link_to "show" , user_path(user.id)%>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
            <% end %>
              <div class="text-center">
                <%= paginate @users, class: "pagenate" %>
              </div>
        </div>
      </div>
  </div>
</div>
